            <fileDesc>
                <titleStmt>
                    <title>Renouncement</title>
                    <author>Alice Meynell</author>
                </titleStmt>
                <publicationStmt><date>1893</date></publicationStmt>
                <sourceDesc default="false"><p/></sourceDesc>
            </fileDesc>
